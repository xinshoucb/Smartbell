<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:background="@android:color/background_dark">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="---"
        android:textColor="@color/content_text_color"
        android:textSize="@dimen/layout_item_content_text_size" />

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/layout_item_index_margin_bottom"
        android:layout_marginRight="@dimen/layout_item_index_margin_right"
        android:background="@drawable/indexback"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/layout_item_index_text_size" />

</RelativeLayout>